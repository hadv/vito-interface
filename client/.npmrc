# NPM configuration for faster CI builds
audit=false
fund=false
prefer-offline=true
progress=false
loglevel=error

# Cache settings
cache-max=86400000
cache-min=3600

# Registry settings (use default npm registry)
registry=https://registry.npmjs.org/

# Performance optimizations
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Disable optional dependencies that might slow down installation
optional=false
